---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <div class="E5">
      <h1>E5</h1>
      <a class="download" href="/ERA_TableauDeSynthese.xlsx" download>Télécharger ERA_Tableau de synthèse</a>

      <div class="attestations">
        <iframe src="/attestations/ERA_Attestation.pdf"></iframe>
      </div>
    </div>

    <div class="E6">
      <h1>E6</h1>
      <iframe src="/attestations/ERA_Attestation2.pdf"></iframe>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1100px;
    margin: 2rem auto;
    padding: 1rem;
    display: grid;
    gap: 2rem;
  }

  .E5,
  .E6 {
    border: 1px solid #ccc;
    border-radius: 16px;
    padding: 1.5rem;
    background: #fafafa;
  }

  .E5 h1,
  .E6 h1 {
    margin-top: 0;
    font-size: 1.4rem;
    text-align: center;
  }

  .download {
    display: block;
    width: fit-content;
    margin: 0.5rem auto 1rem;
    padding: 0.6rem 1rem;
    background: #222;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 0.95rem;
    transition: background 0.2s;
  }
  .download:hover {
    background: #444;
  }

  .attestations {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .attestations iframe {
    width: 100%;
    max-width: 500px;
    height: 600px;
    border: 1px solid #ccc;
    border-radius: 8px;
  }
  @media (max-width: 600px) {
    .attestations iframe {
      height: 400px;
    }
  }
  .E6 p {
    text-align: center;
    font-size: 1.1rem;
    color: #666;
  }
</style>
